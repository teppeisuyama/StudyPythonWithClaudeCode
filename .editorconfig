# EditorConfig - エディタ間で一貫したコーディングスタイルを維持
# https://editorconfig.org

root = true

# すべてのファイルに適用されるデフォルト設定
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Python ファイル
[*.py]
indent_size = 4
max_line_length = 88

# YAML ファイル
[*.{yml,yaml}]
indent_size = 2

# JSON ファイル
[*.json]
indent_size = 2

# TOML ファイル
[*.toml]
indent_size = 4

# Markdown ファイル
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# シェルスクリプト
[*.sh]
indent_size = 2

# バッチファイル (Windows)
[*.{bat,cmd}]
end_of_line = crlf
